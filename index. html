  </div>  <script>
    // Edit these values to personalize the site quickly
    const SITE = {
      name: 'Rasel Ahmed',
      city: 'Riyadh, Thulaim',
      phone: 'YOUR-MOBILE-NUMBER', // replace with +9665XXXXXXXX or any format
    }

    // Fill page with site values
    document.getElementById('hero-title').textContent = SITE.name + ' — Professional HVAC Technician';
    document.getElementById('hero-sub').textContent = 'AC Installation, Ducting, Split AC, Cooler, VRF and Maintenance in ' + SITE.city + '.';
    document.getElementById('location-text').textContent = SITE.city;
    document.getElementById('phone-text').textContent = SITE.phone;
    document.getElementById('city-text').textContent = SITE.city;
    document.getElementById('footer-year').textContent = new Date().getFullYear();

    // Buttons
    const telHref = 'tel:' + SITE.phone;
    const waHref = 'https://wa.me/' + (SITE.phone.replace(/[^0-9]/g,''));
    document.getElementById('call-btn').href = telHref;
    document.getElementById('call-btn-2').href = telHref;
    document.getElementById('whatsapp-btn').href = waHref;

    // Contact form behaviour (client-side only)
    document.getElementById('contact-form').addEventListener('submit', function(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const phone = document.getElementById('phone').value.trim();
      const message = document.getElementById('message').value.trim();
      const el = document.getElementById('form-result');
      if(!name || !phone){ el.textContent = 'Please enter name and phone.'; return; }
      // This demo doesn't send data to a server. Show a message and prepare mailto link.
      el.textContent = 'Preparing message...';
      const subject = encodeURIComponent('Service request from ' + name);
      const body = encodeURIComponent('Name: ' + name + '\nPhone: ' + phone + '\nMessage: ' + message);
      const mailto = 'mailto:?subject=' + subject + '&body=' + body;
      setTimeout(()=>{
        el.innerHTML = 'Message ready. <a href="'+mailto+'">Send by email</a> or call ' + SITE.phone + '.';
      },700);
    });
  </script></body>
